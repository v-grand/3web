# Production Environment Configuration
# ВАЖНО: Замените значения на реальные для вашего production окружения!

# Django Settings
DEBUG=False
STAGE=live
SECRET_KEY=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_KEY_MIN_50_CHARS

# Database - используйте надежный пароль!
DATABASE_URL=postgres://postgres:CHANGE_DATABASE_PASSWORD@db:5432/db

# Domain - укажите ваш реальный домен
DOMAIN=yourdomain.com
SITE_NAME=3web Production

# Email - настройте реальный SMTP
# Примеры:
# EMAIL_URL=smtp://username:password@smtp.gmail.com:587/?ssl=True
# EMAIL_URL=smtp://username:password@smtp.mailgun.org:587/?ssl=True
EMAIL_URL=console://

# Cache - используйте Redis в production
# CACHE_URL=redis://redis:6379/1

# Security
SECURE_SSL_REDIRECT=True
HTTP_PROTOCOL=https

# Static/Media Storage
# Для production рекомендуется S3 или подобное
# DEFAULT_STORAGE_DSN=s3://AWS_ACCESS_KEY_ID:AWS_SECRET_ACCESS_KEY@bucket-name/?region=eu-central-1
DEFAULT_STORAGE_DSN=file:///data/media/?url=%2Fmedia%2F

# Sentry для мониторинга ошибок (настоятельно рекомендуется!)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Google Maps API
# DJANGOCMS_GOOGLEMAP_API_KEY=your_google_maps_api_key

# Algolia Search (если используется)
# ALGOLIA_APPLICATION_ID=
# ALGOLIA_API_KEY=
# ALGOLIA_API_KEY_READ_ONLY=

# Django CMS SSO (если используется Divio)
# SSO_DSN=https://user:pass@control.divio.com/auth/
# ALDRYN_SSO_ENABLE_SSO_LOGIN=False
# ALDRYN_SSO_ALWAYS_REQUIRE_LOGIN=False

# Error Propagation (полезно для отладки на production, но отключите после)
DEBUG_PROPAGATE_EXCEPTIONS=False
